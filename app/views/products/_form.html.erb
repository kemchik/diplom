<div id="fh5co-type" style="background-image: url(<%= asset_path 'pech.jpg' %>) ; " data-stellar-background-ratio="0.5">
  <div class="fh5co-overlay"></div>
  <div class="container" >
    <div class="col-xs-3"></div>
    <div class="col-xs-5">
    <%= simple_form_for [@category, @product] do |f| %>
        <p>
          <%= f.file_field :image %>
        </p>

        <p>
          <%= f.input :name, as: :text, input_html: { class: 'input text' },  label_html: { class: 'label' } %>
        </p>


        <p>
          <%= f.input :ingredients, as: :text, input_html: { class: 'input' },  label_html: { class: 'label' } %>
        </p>

        <p>
          <%= f.input :weight,  input_html: { class: 'input' },  label_html: { class: 'label' } %>
        </p>

        <p>
          <%= f.input :calories, input_html: { class: 'input' },  label_html: { class: 'label' } %>
        </p>

        <p>
          <%= f.input :grease, input_html: {class: 'input'}, label_html: {class: 'label'} %>
        </p>

        <p>
          <%= f.input :proteins, input_html: {class: 'input'}, label_html: {class: 'label'} %>
        </p>

<!--        <p>-->
          <%#= f.input :vegan, input_html: {class: 'input'}, label_html: {class: 'label'} %>
<!--        </p>-->

        <p>
          <%= f.input :price, input_html: { class: 'input' },  label_html: { class: 'label' } %>
        </p>



        <p class="text-center">
          <%= f.submit 'Save', :class => 'save' %>
        </p>
    <% end %>
    </div>
    </div>
  </div>

